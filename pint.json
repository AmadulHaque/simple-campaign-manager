{
    "preset": "laravel",
    "rules": {
        "trailing_comma_in_multiline": true,
        "statement_indentation": true,
        "no_unused_imports": true,
        "no_whitespace_in_blank_line": true,
        "binary_operator_spaces": {
            "default": "align_single_space"
        },
        "blank_line_before_statement": {
            "statements": [
                "return",
                "break",
                "continue",
                "declare",
                "return",
                "throw",
                "try"
            ]
        }
    }
}